<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">


            <gradient android:angle="-90" android:endColor="@color/theme1" android:startColor="@color/theme1" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">


            <gradient android:angle="-90" android:endColor="@color/theme2" android:startColor="@color/theme2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">


            <gradient android:angle="-90" android:endColor="@color/theme2" android:startColor="@color/theme1" />
        </shape>
    </item>
</selector>